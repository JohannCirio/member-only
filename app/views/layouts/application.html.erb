<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar is-primary">
      <div class="navbar-brand">
        <%= link_to("Members Club", root_path, class: "navbar-item")%>
      </div>
      <div class="navbar-menu">
        <div class="navbar-start">
        </div>
  
        <div class="navbar-end">
          <% if user_signed_in? %>
            <%= link_to("New Post", new_user_post_path(current_user.id), class: "navbar-item")%>
            <div class="navbar-item has-dropdown is-hoverable">
              <a class="navbar-link">
                <%= current_user.username %>
              </a>
              <div class="navbar-dropdown is-primary">
                <%= link_to('Sign out', destroy_user_session_path, method: :delete, class: "navbar-item") %>
              </div>
            </div>
          <% else %>
            <div class="navbar-item">
              <div class="buttons">
                <%= link_to("Sign up", new_user_registration_path, class: "button is-primary")%>
                <%= link_to("Log in", new_user_session_path, class: "button")%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </nav>
    
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>


    <%= yield %>
  </body>
</html>
