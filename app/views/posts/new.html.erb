<div class="columns is-centered">
  <div class="column is-half">
    <div class="card">
      <div class="card-content">
        <h1 class="title">New post</h1>
      </div>
    </div>
    <div class="card">
      <div class="card-content">
        <%= form_with model: @post, url: user_posts_path, method: :post, class: "" do |form| %>
          <div class="field">
            <%= form.label :title, "Post title:", class: "label" %>
            <div class="control">
              <%= form.text_field :title, class: "input"%>
            </div>
          </div>
          <div class="field">
            <%= form.label :body, "Post text:", class: "label"%>
            <div class="control">
              <%= form.text_area :body, class: "textarea" %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= form.submit class: "button"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

