<div class="columns is-desktop is-centered">
  <div class="column is-half">
    <% @posts.each do |post| %>
        <div class="card">
          <div class="card-content">
            <p class="title is-4">
              <%= post.title %>
            </p>
            <% if user_signed_in? %>
              <p class="subtitle is-6">
                @<%= User.find(post.user_id).username %>
              </p>
            <% end %>
            <div class="block">
              <%= post.body %>
            </div>
          </div>      
    <% end %>
  </div>
</div>